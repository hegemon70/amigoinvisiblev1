                <div><h1>SORTEO DEL AMIGO INVISIBLE</h1></div>
                <div><strong>¿Alguien no ha recibido su e-mail?</strong><br/>
                    Puedes <a href="{{ path('recuperar') }}">recuperar el sorteo </a> 
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>nombre</th>
                            <th>correo</th>
                        {#    <th>asignado</th>
                            <th>sorteo</th> #}
                        </tr>
                    </thead>
                    <tbody>
                   {% for participante in participantes %}
                   <tr>
                        {% set pos = pos + 1 %}
                        <td>{{ pos }}</td>
                        <td>{{ participante.nombre }}</td>
                        <td>{{ participante.correo }}</td>
                     {#   <td>{{ participante.asignado }}</td>
                        <td>{{ participante.sorteo }}</td> #}
                        {% if contador >= pos %}
                            <td><a href="{{ path('homepage_modificar',{'id':participante.id}) }}">modificar</a> </td>
                  
                        {% else %}
                        <td><a href="{{ path('homepage_nueva') }}">nuevo </a> 
                        </td>
                        {% endif %}
                    </tr>
                   {% endfor %}

            {% if recuperado %}
            <tr>
                <td>
                    <a href="{{ path('homepage_sorteo',{'id':idSorteo}) }}">Editar Correo</a>
                </td>
            </tr>
            {% else %}{#recuperado = false #}
                {% if contador > 2 %}{# si no hay mas de dos participantes#}
                     <tr>
                            <td><a href="{{ path('sorteo_modificar') }} "> Sortear </a></td> 
                       {% if pos >= numpart %}
                      
                            <td><a href="{{ path('homepage_nueva') }}">Añadir mas amigos </a> </td>
                      
                        {%  endif  %}
                    </tr>
                {% endif %}
            {% endif %} {#fin recuperado#}
                </tbody>
                </table>
               

{% endblock %}





