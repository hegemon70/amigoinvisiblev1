{% extends 'base.html.twig' %}

{% block body %}

                {% set pos = 0 %}
                {#   
                {% if app.session.flashbag().get('min3') is defined %}
                    {% for message in app.session.flashbag().get('min3') %}
                        <div class="alert alert-error">{{ message }}</div>   
                    {% endfor %}
                {% endif %}
