{# app\Resources\views\default\sorteo\reenvio.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <div>
             {% for message in app.flashes('exito') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
              {% for message in app.flashes('fallo') %}
                        <div class="alert alert-error">{{ message }}</div>
                    {% endfor %}
    </div>
<div>
    
       
                 
        <h1>ESCRIBE EL E-MAIL DE TU AMIGO Y REENVIALO</h1>
    <h4>esta persona recibira en este e-mail el mismo nombre del amigo que le habia tocado</h4>

   {{ form_start(form) }}
     <table class="table table-hover col-md-12">
        <thead>
          <tr>
            <th>nombre</th>
            <th>correo</th>
            <th></th>
          </tr>
        </thead>
        <tbody>

 
  {% for participante in sorteo.participantes %}
        {{ render(controller('AppBundle:Participantes:reenvio',{'participante': participante,'sorteo':sorteo})) }}
  {% endfor %} 
   
   </tbody>
    </table>
                <div>
    {{ form_widget(form.cancel, {'label':'Volver'}) }}
    {{ form_end(form,{'render_rest':false}) }}
                </div>
</div>
 
                       
{% endblock %}

